module ast2text
imports
  libstratego-lib
  libstratego-gpp
  abox2text
  ast2abox

strategies

  io-ast2text = 
    io-stream-wrap(
      ast2text-options
    , system-usage
    , system-about
    , ast2text
    )
    
  ast2text =
    ?(<read-from-stream>, fout)  
    ; ast2box(|<read-pptables-config>)      
    ; box2text-stream(|<get-width>, fout)
    ; <fputs> ("\n", fout)    
    
  ast2text-options =
      abox2text-options
    + ast2abox-options
