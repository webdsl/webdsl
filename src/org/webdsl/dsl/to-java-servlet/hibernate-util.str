  real-simple-joins-to-array(|rootfa):
    fa@FieldAccess(p, f){anno*} -> (newprefix, joins)
    where not(rootfa := fa)
    ; (prefix, otherjoins) := <real-simple-joins-to-array(|rootfa)> p
