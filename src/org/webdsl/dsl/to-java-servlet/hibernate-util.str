	  ; newjoin := <concat-strings> [prefix, f]
	  ; newprefix := <concat-strings> [newjoin, "._"]
	  ; joins := [newjoin | otherjoins]

  all-joins-to-array(|rootfa):
    c@Cast(p, srt){anno*} -> result
    where result := <all-joins-to-array(|rootfa)> p

